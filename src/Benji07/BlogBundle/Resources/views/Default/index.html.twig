{% extends "::base.html.twig" %}

{% block body %}

    {% for post in pagination %}
        <h2><a href="{{ path('blog_show', {slug: post.slug}) }}">{{ post }}</a> <small>{{ post.publishedAt|localizeddate('medium', 'none') }}</small></h2>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
